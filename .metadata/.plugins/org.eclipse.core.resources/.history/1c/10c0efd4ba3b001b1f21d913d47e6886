    List list = new List();
    
    boolean quit = false;
    int choice = 0;

    
    printInstructions();
    while (!quit) {
        System.out.println("Enter your choice: ");
        choice = scanner.nextInt();
        scanner.nextLine();

        switch (choice) {
            case 0:
                printInstructions();
